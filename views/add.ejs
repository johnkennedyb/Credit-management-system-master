          <input type="text" class="form-control form-control-lg"  name="firstname" placeholder="">
        </div>

        <div class="mb-3">
          <label for="exampleInputName1" class="form-label">Last_Name</label>
          <input type="text" class="form-control form-control-lg" name="lastname" placeholder="">
        </div>
     
        <div class="mb-3">
          <label for="exampleInputName1" class="form-label">Age</label>
          <input type="number" class="form-control form-control-lg" name="age" placeholder="">
        </div>

        <div class="mb-3">
          <label for="exampleInputName1" class="form-label">Monthly_Income</label>
          <input type="number" class="form-control form-control-lg" name="monthlyIncome" placeholder="">
        </div>

        <div class="mb-3">
          <label for="exampleInputName1" class="form-label">Phonenumber</label>
          <input type="text" class="form-control form-control-lg"  name="phonenumber" placeholder="">
        </div>

         
        
          <div class="mb-3 d-grid">
