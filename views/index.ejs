<%- include('layout/header')%>

<div class="container my-5">
  <div class="row my-4">
    <div class="col-lg-12">
      <div class="table-responsive">
        <table class="table table-striped text-center my-3">
          <thead>
            <tr class="table-dark">
              <th>ID</th>
              <th>First_Name</th>
              <th>Last_Name</th>
              <th>Age</th>
              <th>Monthly_Income</th>
              <th>Phone_number</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((row, index) => { %>
              <tr>
                <td><%= index %></td>
                <td><%= row.firstname %></td>
                <td><%= row.lastname %></td>
                <td><%= row.age %></td>
                <td><%= row.monthlyIncome %></td>
                <td><%= row.phonenumber %></td>
                <td>
                  <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                  <a href="/delete/<%= row._id %>" class="text-danger" onclick="return confirm('Are you sure you want to delete <%= row.firstname %> <%= row.lastname %>?');">
                    <i class="fas fa-trash fa-lg mx-1"></i>
                  </a>
                  
                </td>
                
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


<%- include('layout/footer')%>



    